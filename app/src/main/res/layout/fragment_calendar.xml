<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="336dp"
        android:layout_height="384dp" android:layout_centerInParent="true"

        android:background="@color/colorPrimary" android:elevation="6dp">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="336dp"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary" android:elevation="6dp"
            android:layout_alignParentLeft="false" android:layout_marginLeft="0dp"
            android:layout_alignParentTop="false" android:layout_marginTop="0dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="48dp" android:id="@+id/headerContainer"
                android:background="@color/colorPrimary">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="MAY 2015"
                    android:id="@+id/dateTextView" android:textColor="@color/colorAccent"
                    style="@style/TextAppearance.AppCompat.Title"
                    android:layout_centerVertical="true" android:layout_centerHorizontal="true"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/nextMonthButton" android:layout_alignParentTop="true"
                    android:layout_toRightOf="@+id/dateTextView" android:layout_toEndOf="@+id/dateTextView"
                    android:src="@mipmap/ic_launcher"
                    android:layout_centerHorizontal="true" android:layout_alignParentBottom="true"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/previousMonthButton" android:layout_alignParentTop="true"
                    android:layout_toLeftOf="@+id/dateTextView" android:layout_toStartOf="@+id/dateTextView"
                    android:src="@mipmap/ic_launcher"
                    android:layout_centerHorizontal="true" android:layout_alignParentBottom="true"/>
            </RelativeLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="48dp" android:background="@color/colorPrimary"
                android:gravity="center">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="M"
                    android:id="@+id/textView2" android:textColor="@color/white"
                    style="@style/TextAppearance.AppCompat.Title" android:layout_weight="1"
                    android:gravity="center"/>
                <TextView style="@style/TextAppearance.AppCompat.Title"
                    android:layout_width="0dp" android:layout_height="wrap_content"
                    android:text="T" android:id="@+id/textView4" android:textColor="@color/white"
                    android:layout_weight="1" android:gravity="center"/>
                <TextView style="@style/TextAppearance.AppCompat.Title"
                    android:layout_width="0dp" android:layout_height="wrap_content"
                    android:text="W" android:id="@+id/textView5" android:textColor="@color/white"
                    android:layout_weight="1" android:gravity="center"/>
                <TextView style="@style/TextAppearance.AppCompat.Title"
                    android:layout_width="0dp" android:layout_height="wrap_content"
                    android:text="T" android:id="@+id/textView6" android:textColor="@color/white"
                    android:layout_weight="1" android:gravity="center"/>
                <TextView style="@style/TextAppearance.AppCompat.Title"
                    android:layout_width="0dp" android:layout_height="wrap_content"
                    android:text="F" android:id="@+id/textView7" android:textColor="@color/white"
                    android:layout_weight="1" android:gravity="center"/>
                <TextView style="@style/TextAppearance.AppCompat.Title"
                    android:layout_width="0dp" android:layout_height="wrap_content"
                    android:text="S" android:id="@+id/textView8" android:textColor="@color/white"
                    android:layout_weight="1" android:gravity="center"/>
                <TextView style="@style/TextAppearance.AppCompat.Title"
                    android:layout_width="0dp" android:layout_height="wrap_content"
                    android:text="S" android:id="@+id/textView3" android:textColor="@color/white"
                    android:layout_weight="1" android:gravity="center"/>
            </LinearLayout>
            <android.support.v7.widget.RecyclerView
                android:layout_width="336dp"
                android:layout_height="288dp"
                android:id="@+id/calendarList" android:background="@color/colorPrimary"/>
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>