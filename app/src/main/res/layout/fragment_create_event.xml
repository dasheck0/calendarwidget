<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorAccent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary" android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp" android:layout_marginTop="32dp"
        android:id="@+id/eventContainer" android:layout_above="@+id/dateContainer">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:background="@color/white"
            android:layout_marginTop="8dp">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:id="@+id/editText" android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true" android:layout_alignParentStart="true"
                android:hint="Name"
                android:layout_toLeftOf="@+id/imageView" android:layout_toStartOf="@+id/imageView"
                android:background="@color/white" android:paddingLeft="16dp"/>
            <ImageView
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:id="@+id/imageView" android:layout_alignParentTop="true"
                android:layout_alignParentRight="true" android:src="@mipmap/ic_launcher"
                android:padding="8dp"/>
        </RelativeLayout>
    </RelativeLayout>
    <com.dasheck.calendarwidget.views.TriangleView android:layout_width="64dp"
        android:layout_height="32dp" android:layout_below="@+id/eventContainer"
        app:fillColor="@color/colorPrimary"
        android:layout_centerHorizontal="true"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="64dp" android:layout_alignParentBottom="true"
        android:layout_margin="32dp" android:id="@+id/dateContainer">
        <TextView
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:text="1"
            android:id="@+id/dayTextView" android:gravity="center"
            style="@style/TextAppearance.AppCompat.Title" android:layout_centerInParent="true"/>
    </RelativeLayout>
</RelativeLayout>